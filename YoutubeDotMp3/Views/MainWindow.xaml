<Window x:Class="YoutubeDotMp3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:YoutubeDotMp3.ViewModels"
        mc:Ignorable="d"
        Height="450"
        Width="800"
        Title="Youtube.Mp3"
        Icon="../Resources/icon.ico"
        Closed="OnClosed">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid>
            <ListView ItemsSource="{Binding Operations}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:OperationViewModel}">
                        <DockPanel Margin="5">
                            <DockPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Cancel" Command="{Binding CancelCommand}" />
                                </ContextMenu>
                            </DockPanel.ContextMenu>
                            <TextBlock Text="{Binding CurrentState}" DockPanel.Dock="Right" />
                            <TextBlock Text="{Binding Title}" />
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Window>
